{
  "watchDir": "C:\\Media\\incoming",
  "successDir": "processed",
  "failedDir": "failed",

  "serverBase": "http://localhost:3000",
  "authorizePath": "/api/media/authorize",
  "authToken": "",

  "includeExt": [".mp4",".mov",".m4v",".webm",".avi",".mkv",".jpg",".jpeg",".png"],
  "filenamePattern": "^(?<id>\\d{4})(?:[ _()\\-].+)?\\.[^.]+$",
  "filenamePatternFlags": "i",
  "recursive": false,

  "storePrefix": "uploads",

  "sendMode": "batch",
  "batchSeconds": 1,
  "heartbeatSeconds": 10,
  "pollFallback": true,
  "initialScan": true,
  "logFile": "watch-upload.log"
}
